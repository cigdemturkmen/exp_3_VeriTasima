
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Brans</th>
                <th colspan="3">İşlemler</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ad</td>
                    <td>@item.Soyad</td>
                    <td>@item.Brans</td>
                    <td><a href="/teacher/edit/@item.Id"> Düzenle</a></td>
                    <td><a href="/teacher/delete/@item.Id">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/teacher/add">Ekleme sayfasına git</a>
</body>
</html>
