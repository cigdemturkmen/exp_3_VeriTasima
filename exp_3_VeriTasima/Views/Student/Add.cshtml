@using exp_3_VeriTasima.Models
@model Ogrenci
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    @*contollerdan gelen öğrencinin içini doldurmak için MVC HTML HELPER kullandık;*@
