    {
        @Html.AntiForgeryToken() //Form güvenliğini sağlıyor.olmazsa ataklara açık olursun

        <label>Ad</label>
        @Html.TextBoxFor(model => model.Ad)

        <label>Soyad</label>
        @Html.TextBoxFor(model => model.Soyad)

        <button type="submit">Göndeer</button>
    }

