@using exp_3_VeriTasima.Models

@model List<Ogrenci>
@{
    Layout = null;
}

@*yukarıdaki referansları şu şekilde de gösterebilirdik. @model  exp_3_VeriTasima.Models List<Ogrenci>*@
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Ad</th>
                <th>Soyad</th>
                <th colspan="2">İşlemler</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td><a href="/student/edit/@ogrenci.Id"> Düzenle</a></td>
                <td><a href="/student/delete/@ogrenci.Id">Sil</a></td>
            </tr>
            }


        </tbody>
    </table>
</body>
</html>
